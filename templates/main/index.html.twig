{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Home {% endblock %}

{% block body %}

    <div class="container-xl home-cont">
        <dotlottie-player
                src="https://lottie.host/e8fb551e-d109-42bb-b9d7-ceabf4b38f96/nHepPgln99.lottie"
                background="transparent"
                speed="1"
                style="width: 300px; height: 300px; margin: 0 auto;"
                loop
                autoplay
        >
        </dotlottie-player>

        {% if app.user %}
        <h1>Hello <span class="text-decoration-underline">{{ user }}</span>!</h1>
        {% else %}
        <h2>Log in to see all features !</h2>
        {% endif %}
        <p class="mt-4">
            You are on the world's most famous website <span class="fs-3">{{ site_name }}</span> !
        </p>

        <script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>

    </div>

{% endblock %}
