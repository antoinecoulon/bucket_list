{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Edit wish {% endblock %}

{% block body %}
    <h1>Edit Wish : {{ wish.title }}</h1>
    <p><strong>Créé le :</strong> {{ wish.dateCreatedAt|date('d/m/Y H:i') }} par : {{ wish.author }}</p>

    {{ form_start(wishForm) }}

    <div class="group">
        <label for="{{ field_name(wishForm.title) }}">Title: </label>
        <input type="text"
               id="{{ field_name(wishForm.title) }}"
               name="{{ field_name(wishForm.title) }}"
               value="{{ field_value(wishForm.title) }}"
               class="form-control"
        >
        {% for error in field_errors(wishForm.title) %}
            <div class="alert alert-danger error">{{ error }}</div>
        {% endfor %}
    </div>

    <div class="group">
        <label for="{{ field_name(wishForm.description) }}">Description: </label>
        <textarea
                       id="{{ field_name(wishForm.description) }}"
                       name="{{ field_name(wishForm.description) }}"
                       class="form-control"
        >{{ field_value(wishForm.description) }}</textarea>
        {% for error in field_errors(wishForm.description) %}
            <div class="alert alert-danger error">{{ error }}</div>
        {% endfor %}
    </div>

    <button class="btn btn-primary">Edit!</button>
    {{ form_end(wishForm) }}


{% endblock %}