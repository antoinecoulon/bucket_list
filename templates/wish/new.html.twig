{% extends 'base.html.twig' %}

{% block body %}

    <section class="wish-form">

        <div>
            <h1>Add a wish:</h1>

            {{ form_start(wishForm) }}

            <div class="group">
                <label for="{{ field_name(wishForm.title) }}">Title: </label>
                <input type="text"
                       id="{{ field_name(wishForm.title) }}"
                       name="{{ field_name(wishForm.title) }}"
{#                       value="{{ field_name(wishForm.title) }}"#}
{#                       placeholder="{{ field_name(wishForm.title) }}"#}
                       class="form-control"
                >

                {% for error in field_errors(wishForm.title) %}
                    <div class="alert alert-danger error">{{ error }}</div>
                {% endfor %}
            </div>

            <div class="group">
                <label for="{{ field_name(wishForm.description) }}">Description: </label>
                <textarea
{#                        placeholder="{{ field_name(wishForm.description) }}"#}
                       id="{{ field_name(wishForm.description) }}"
                       name="{{ field_name(wishForm.description) }}"
                       class="form-control"
                ></textarea>

                {% for error in field_errors(wishForm.description) %}
                    <div class="alert alert-danger error">{{ error }}</div>
                {% endfor %}
            </div>

            <div class="group">
                <label for="{{ field_name(wishForm.author) }}">Author: </label>
                <input type="text"
                       id="{{ field_name(wishForm.author) }}"
                       name="{{ field_name(wishForm.author) }}"
{#                       value="{{ field_name(wishForm.author) }}"#}
{#                       placeholder="{{ field_name(wishForm.author) }}"#}
                       class="form-control"
                >

                {% for error in field_errors(wishForm.author) %}
                    <div class="alert alert-danger error">{{ error }}</div>
                {% endfor %}
            </div>

            <button class="btn btn-primary">Send!</button>
            {{ form_end(wishForm) }}
        </div>

    </section>

{% endblock %}

{% block title %}
    {{ parent() }} - Add a wish
{% endblock %}

