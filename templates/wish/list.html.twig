{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Liste wish {% endblock %}

{% block body %}

    <h2>Liste des Wishes:</h2>

    <div class="container-sm text-center">
        {% for wish in wishes %}
        <div class="row border-bottom border-primary mb-1">
            <div class="col-2">
                <a href="{{ path('wish_detail', {id: wish.id}) }}">{{ wish.title }}</a>
            </div>
            <div class="col-8">
                {{ wish.description }}
            </div>
            <div class="col-2">
                Créé le {{ wish.dateCreatedAt|date('d/m/Y H:i') }}
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}